# Production Environment Variables for Vercel Deployment
# These will be configured in Vercel Dashboard after initial deploy

# API Configuration
NEXT_PUBLIC_API_URL=https://scriptripper-api.onrender.com

# App Configuration
NEXT_PUBLIC_APP_NAME=ScriptRipper
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_HOST=https://www.scriptripper.com

# Feature Flags
NEXT_PUBLIC_ENABLE_CUSTOM_PROMPTS=true
NEXT_PUBLIC_ENABLE_BATCH_UPLOAD=true
NEXT_PUBLIC_ENABLE_PROFILE_MARKETPLACE=false

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50

# API Configuration
NEXT_PUBLIC_API_TIMEOUT_MS=30000

# Google OAuth (will be configured in Vercel)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id-here
