# Web Environment Variables (Next.js)

# API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment
NODE_ENV=development

# Google OAuth (Public)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Feature Flags
NEXT_PUBLIC_ENABLE_CUSTOM_PROMPTS=true
NEXT_PUBLIC_ENABLE_BATCH_UPLOAD=true
NEXT_PUBLIC_ENABLE_PROFILE_MARKETPLACE=false

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# Sentry (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# App Configuration
NEXT_PUBLIC_APP_NAME=ScriptRipper
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50

# API Configuration
NEXT_PUBLIC_API_TIMEOUT_MS=30000
