# API Environment Variables

# Database
DATABASE_URL=postgresql://scriptripper:dev_password@postgres:5432/scriptripper_dev

# Redis
REDIS_URL=redis://redis:6379

# Environment
ENVIRONMENT=development

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Providers
GEMINI_API_KEY=your-gemini-api-key  # From https://aistudio.google.com/apikey
OPENAI_API_KEY=sk-...  # From https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=sk-ant-...  # From https://console.anthropic.com/settings/keys

# Default provider (gemini, openai, anthropic)
DEFAULT_LLM_PROVIDER=gemini

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/google/callback

# Magic Link Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@scriptripper.example.com
MAGIC_LINK_EXPIRE_MINUTES=15

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# n8n Webhooks
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# Object Storage (S3-compatible)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=scriptripper-artifacts
S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=json,txt,srt,vtt

# Transcript Limits
MAX_TRANSCRIPT_LENGTH=500000  # Maximum transcript size in characters (~125K tokens)

# Security
ENCRYPTION_KEY=your-encryption-key-here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_...  # From https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...  # From webhook settings
STRIPE_PRO_PRICE_ID=price_...  # Price ID for Pro subscription
STRIPE_SUCCESS_URL=http://localhost:3000/subscription/success
STRIPE_CANCEL_URL=http://localhost:3000/subscription/cancel

# Sentry Error Tracking (optional - get DSN from sentry.io)
SENTRY_DSN=  # https://[key]@[organization].ingest.sentry.io/[project-id]
SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% performance monitoring (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1  # 10% profiling (0.0 to 1.0)
