# ==============================================================================
# ScriptRipper+ Environment Variables for Render (Template)
# ==============================================================================
# 1. Copy this file to `.env.render` (which is git-ignored).
# 2. Replace every placeholder value (ALL_CAPS with ____) before deploying.
# 3. Keep the real `.env.render` out of version control.
# ==============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
APP_NAME=ScriptRipper
APP_VERSION=0.1.0
ENVIRONMENT=production
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Database & Cache (set automatically by Render)
# ----------------------------------------------------------------------------
# DATABASE_URL
# REDIS_URL

# ----------------------------------------------------------------------------
# JWT Security
# ----------------------------------------------------------------------------
JWT_SECRET=__GENERATE_A_64_CHAR_HEX_SECRET__
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# LLM Providers
# ----------------------------------------------------------------------------
GEMINI_API_KEY=__REQUIRED_GEMINI_API_KEY__
OPENAI_API_KEY=__OPTIONAL_OPENAI_API_KEY__
ANTHROPIC_API_KEY=__OPTIONAL_ANTHROPIC_API_KEY__
DEFAULT_LLM_PROVIDER=gemini

# ----------------------------------------------------------------------------
# Google OAuth (Optional)
# ----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=__OPTIONAL_GOOGLE_CLIENT_ID__
GOOGLE_CLIENT_SECRET=__OPTIONAL_GOOGLE_CLIENT_SECRET__
GOOGLE_REDIRECT_URI=https://scriptripper.com/auth/callback

# ----------------------------------------------------------------------------
# Email Configuration (Optional)
# ----------------------------------------------------------------------------
PURELYMAIL_API_TOKEN=__OPTIONAL_PURELYMAIL_TOKEN__
PURELYMAIL_SMTP_HOST=smtp.purelymail.com
PURELYMAIL_SMTP_PORT=587
PURELYMAIL_SMTP_USER=
PURELYMAIL_SMTP_PASS=
FROM_EMAIL=noreply@scriptripper.com
MAGIC_LINK_EXPIRE_MINUTES=15

# ----------------------------------------------------------------------------
# CORS / Misc
# ----------------------------------------------------------------------------
CORS_ORIGINS=https://scriptripper.com,https://www.scriptripper.com
N8N_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# Object Storage (Optional)
# ----------------------------------------------------------------------------
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=scriptripper-artifacts
S3_REGION=us-east-1

# ----------------------------------------------------------------------------
# Rate Limiting / Uploads
# ----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=json,txt,srt,vtt
MAX_TRANSCRIPT_LENGTH=500000

# ----------------------------------------------------------------------------
# Stripe Billing
# ----------------------------------------------------------------------------
STRIPE_SECRET_KEY=__REQUIRED_STRIPE_SECRET_KEY__
STRIPE_PUBLISHABLE_KEY=__REQUIRED_STRIPE_PUBLISHABLE_KEY__
STRIPE_PRO_PRICE_ID=__REQUIRED_STRIPE_PRICE_ID__
STRIPE_WEBHOOK_SECRET=__ADD_AFTER_CONFIGURING_WEBHOOK__
STRIPE_SUCCESS_URL=https://scriptripper.com/success
STRIPE_CANCEL_URL=https://scriptripper.com/pricing

# ----------------------------------------------------------------------------
# Sentry (Optional)
# ----------------------------------------------------------------------------
SENTRY_DSN=__OPTIONAL_SENTRY_DSN__
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
